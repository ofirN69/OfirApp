<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".screens.MyEvents">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_event"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="My Events"
            android:textAlignment="center"
            android:textColor="#1A237E"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </androidx.cardview.widget.CardView>

    <!-- Category Cards Container -->
    <LinearLayout
        android:id="@+id/categoryCardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleCard">

        <!-- First Row: Today's and Future Events -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Today's Events Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/todayEventsCard"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_event"
                        android:tint="#4CAF50"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Events"
                        android:textSize="18sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/todayEventsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Events: 0"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Future Events Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/futureEventsCard"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_event"
                        android:tint="#2196F3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Future Events"
                        android:textSize="18sp"
                        android:textColor="#0D47A1"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/futureEventsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Future Events: 0"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row: Past Events (with margin top for spacing) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- Past Events Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pastEventsCard"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="160dp"
                app:cardBackgroundColor="#FFEBEE"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_event"
                        android:tint="#F44336"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past Events"
                        android:textSize="18sp"
                        android:textColor="#B71C1C"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/pastEventsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past Events: 0"
                        android:textSize="14sp"
                        android:textColor="#F44336"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Events List Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/eventsListCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/categoryCardsContainer"
        app:layout_constraintBottom_toTopOf="@id/noCategoryText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/selectedCategoryTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category Events"
                    android:textSize="20sp"
                    android:textColor="#1A237E"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/closeEventsButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#1A237E"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEvents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- No Category Selected Text -->
    <TextView
        android:id="@+id/noCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No category selected"
        android:textSize="16sp"
        android:textColor="#78909C"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
