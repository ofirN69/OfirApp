<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#DFEAFE"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AfterLogPage">

    <TextView
        android:id="@+id/tv_hello"
        android:text="Admin PAGE"
        android:layout_width="162dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="31dp"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#7BA3F6"
        android:text="האירועים שלי"
        android:onClick="goEvents"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/tv_hello" />

    <Button
        android:id="@+id/button2"
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:layout_marginBottom="12dp"
        android:text="צור אירוע"
        android:onClick="Add"
        android:backgroundTint="#7BA3F6"

        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_marginBottom="446dp"
        android:backgroundTint="#7BA3F6"

        android:onClick="onClick"
        android:text="לפרטי המשתמש"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>