<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFEAFE"
    tools:context=".screens.MainActivity">


    <Button
        android:id="@+id/btnGoRegister"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#7BA3F6"
        android:onClick="goReg"
        android:text="הרשם"
        android:textColor="@color/white"
        android:textSize="19.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btnGoLogin"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="420dp"
        android:backgroundTint="#7BA3F6"
        android:text="התחבר"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="80dp"
        android:drawableLeft="@drawable/house3"
        android:text="מסך בית "
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>